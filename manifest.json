{
  "name": "USM Login",
  "version": "0.1",
  "browser_action": {
    "default_icon": "icon_32.png",
    "default_popup": "options.html"
  },

  "content_scripts": [ {
    "js": [ "assets/jquery.min.js", "assets/app.js" ],
    "matches": [ "*://wifi-auth.usm.cl/*", "*://10.6.43.2:*/*", "*://1.1.1.1/*" ]
  }],

  "background": {
    "scripts": [ "assets/background.js" ]
  },

  "permissions": [
    "notifications"
  ],

  "icons": {
    "16": "icon_16.png",
    "32": "icon_32.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  }
}